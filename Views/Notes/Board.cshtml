        position: relative;
        box-shadow: 0px 12px 25px -12px rgba(0,0,0,0.75);

        -webkit-transform:rotate(-6deg);
        -o-transform:rotate(-6deg);
        -moz-transform:rotate(-6deg);
        font-family: 'Permanent Marker', cursive;
        margin: 30px 0px;
        display: block;
    }

    .column-header {
        text-align: center;
        font-weight: 500;
        display: block;
    }


    .column {

        width: 260px;
        height: 100vh;
        display: block;
        float: left;
